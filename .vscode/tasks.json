{
	// Tasks to build/run the project using Lime
	"version": "2.0.0",
	"tasks": [
        {
            "label": "lime test cpp",
            "type": "shell",
            "command": "lime",
            "args": [
                "test",
                "cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "lime test html5 (connect)",
            "type": "shell",
            "command": "lime",
            "args": [
                "test",
                "html5",
                "--connect",
                "6000"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        }
    ]
}
